<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.stu.view.controller.AddStudentController">

    <VBox alignment="CENTER_LEFT" layoutX="50.0" layoutY="50.0" spacing="9">
        <Label text="Name:" />
        <TextField fx:id="nameField" promptText="Please input name" />
        <Label text="Age:" />
        <TextField fx:id="ageField" promptText="Please input age" />
        <Label text="Sex:" />
        <TextField fx:id="sexField" promptText="Please input sex" />
        <Label text="Phone:" />
        <TextField fx:id="phoneField" promptText="Please input chinese phone number(+86)" />
        <Label text="Address:" />
        <TextField fx:id="addressField" promptText="Please input address" />
        <Label text="Username:" />
        <TextField fx:id="usernameField" promptText="Please input username" />
        <Label text="Password:" />
        <TextField fx:id="passwordField" promptText="Please input password" />
        <Label text="In Class:" />
        <TextField fx:id="inClassField" promptText="Please input class" />
    </VBox>
    <Button layoutX="255.0" layoutY="320.0" onAction="#addStudentAction" text="Add Student" />
   <Button layoutX="255.0" layoutY="255.0" onAction="#backAction" prefHeight="23.0" prefWidth="89.0" text="Back" />

</AnchorPane>
